---
export interface Props {
    title: string,
    body: string,
    href: string,
	image: string,
}

const {href, title, body, image} = Astro.props;

---

<li class="big-link-card">
    <a href={href}>
		<h2>
			<span>{title}</span>
		</h2>

		<img class="big-card-image" src={image} alt={title} />	
		<p>
			{body}
		</p>    
    </a>
</li>
<style>

	.big-card-image {
		width: 100%;
	}

	.big-link-card {
		list-style: none;
		display: grid;
		grid-template-rows: auto 1fr auto;
		/* min-height: 100vh; */
		padding: 1em;
		background-color: white;
	}

	.big-link-card > a {
		width: 100%;
		text-decoration: none;
		opacity: 0.8;
	}

	h2 {
		
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
    
	h2 span {
		display: inline-block;
		transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
		font-size: 1em;
	}

	.big-link-card:is(:hover, :focus-within) {
		background-position: 0;
	}

	.big-link-card:is(:hover, :focus-within) h2 {
		color: #4F39FA;
	}

	.link-card:is(:hover, :focus-within) h2 span {
		transform: translateX(2px);
	}
</style>
