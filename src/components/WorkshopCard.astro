---
export interface Props {
    title: string,
    body: string,
    href: string,
	images: string,
}

const {href, title, body, images} = Astro.props;
---
<li class="link-card">
    <a href={href}>
        <h2>
            {title}
        </h2>

        <p>
            {body}
        </p>

        
        {images.map((data) => 
			<img class="card-image" src={data.imageUrl} alt={title}>
			)}
	
    </a>
</li>
<style>


	.card-image {
		max-width: 300px;
	}

	.link-card {
		list-style: none;
		display: flex;
		padding: 0.15rem;
		background-position: 100%;
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1em 1.3em;
		color: var(--text-color);
		background-color: white;
		opacity: 0.8;
	}

	h2 {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
    
    p {
        margin-top: 0.75rem;
        margin-bottom: 0;
    }

	h2 span {
		display: inline-block;
		transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: #4F39FA;
	}

	.link-card:is(:hover, :focus-within) h2 span {
		transform: translateX(2px);
	}
</style>
